<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="kstr14.tipper.Activities.MyProfileActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_text_my_profile_username"
        android:id="@+id/myProfile_tv_username_head"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_text_my_profile_email"
        android:id="@+id/myProfile_tv_email_head"
        android:textSize="20sp"
        android:layout_below="@+id/myProfile_tv_username_head"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/myProfile_tv_username_head"
        android:textStyle="bold"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myProfile_tv_username"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/myProfile_tv_username_head"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/myProfile_tv_username_head" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myProfile_tv_email"
        android:textSize="20sp"
        android:layout_alignTop="@+id/myProfile_tv_email_head"
        android:layout_alignStart="@+id/myProfile_tv_username"
        android:layout_alignEnd="@+id/myProfile_tv_username" />
</RelativeLayout>
